@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="navbar-right">
    <li>
        <a class=" btn" style="height:inherit; width:inherit" href="@Url.Action("Register", "Account", routeValues: null)">Register &raquo;</a>
    </li>
    <li>
        <a class=" btn" style="height:inherit; width:inherit" href="@Url.Action("Login", "Account", routeValues: null)">Log in &raquo;</a>
    </li>
